{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "lib": ["ES2019", "dom"],
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "inlineSources": true,
    "types": ["static-assets", "environment", "node"]
  },
  "exclude": ["./src/common/**", "**/*.spec.ts", "**/*.spec.tsx", "**/*.test.ts", "**/*.test.tsx"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
